# Telegram Bot настройки
BOT_TOKEN=your_bot_token_here
CHAT_ID=-1002549644699

# Для канала используйте ID канала (начинается с -100)
# Для личных сообщений используйте ваш ID пользователя
# Примеры:
# CHAT_ID=-1002549644699  # Канал
# CHAT_ID=123456789       # Личные сообщения

# Логирование
LOG_LEVEL=INFO

# WebDriver настройки (опционально)
HEADLESS=false

# Настройки для сервера (рекомендуется для серверного использования)
SAVE_SCREENSHOTS=false

# Настройки очистки (в config.py):
# CLEANUP_INTERVAL = 900 (15 минут)
# FILE_RETENTION_MINUTES = 15 (JSON файлы)
# SCREENSHOT_RETENTION_MINUTES = 10 (скриншоты)
